<Window x:Class="OBEM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Dugme za prelazak na ApiTester stranicu -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Otvori API Tester"
            Margin="10"
            Click="OpenApiTester_Click"/>

            <Button Content="Otvori Unit Energy Monitoring"
            Margin="10"
            Click="OpenUnitEnergyMonitoring_Click"/>

            <Button Content="Otvori Energy Cost View"
            Margin="10"
            Click="OpenEnergyCost_Click"/>
        </StackPanel>


        <!-- Frame koji prikazuje stranice -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>