<Window x:Class="OBEM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="960" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Dugme za prelazak na ApiTester stranicu -->


        <!-- Frame koji prikazuje stranice -->
        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="700" Grid.Row="1" Height="30">
            <Button Content="Otvori API Tester"
                Click="OpenApiTester_Click" Width="100"/>

            <Button Content="Otvori Unit Energy Monitoring"
                Click="OpenUnitEnergyMonitoring_Click" Width="100"/>

            <Button Content="Otvori Energy Cost View"
                Click="OpenEnergyCost_Click" Width="100"/>
        </DockPanel>


        <!-- Frame koji prikazuje stranice -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Margin="0,30,0,0"/>
    </Grid>
</Window>