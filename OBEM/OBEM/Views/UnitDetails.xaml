<Page x:Class="OBEM.Views.UnitDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OBEM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UnitDetails"
      Loaded="PageLoaded">
    <Border CornerRadius="5" Padding="5" BorderBrush="Gray" BorderThickness="2">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                <GradientStop Color="#272537" Offset="0" />
                <GradientStop Color="#1d4fba" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Logo" FontFamily="Verdana" Margin="-15,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="22" MouseLeftButtonDown="PageLoaded"/>

            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                <RadioButton x:Name="Floor2" FontFamily="Verdana" Click="FloorButton_Click" Content="Floor 2" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="Floor1" FontFamily="Verdana" Click="FloorButton_Click" Content="Floor 1" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="Floor0" FontFamily="Verdana" Click="FloorButton_Click" Content="Floor 0" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="FloorNeg1" FontFamily="Verdana" Click="FloorButton_Click" Content="Floor -1" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="Outside" FontFamily="Verdana" Click="FloorButton_Click" Content="Outside" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="General" FontFamily="Verdana" Click="FloorButton_Click" Content="General" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>
            <Grid Grid.Row="0" Grid.Column="1">
                <Line x:Name="arrowLine" X1="140" Y1="15" X2="100" Y2="15" Margin="300,0,0,15" Stroke="Black" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1"/>
                <RadioButton x:Name="txtCurrentOption" Height="30" Margin="270,0,0,5" Width="100" Style="{StaticResource SelectionButtonTheme}"/>
                <RadioButton x:Name="txtCurrentOptionApartment" Height="30" Margin="520,0,0,5" Width="100" Style="{StaticResource SelectionButtonTheme}"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="131*"/>
                    <ColumnDefinition Width="489*"/>
                    <ColumnDefinition Width="66*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.ColumnSpan="3">
                    <!--Real Time usage-->
                    <TextBlock Text="Total Real-Time Usage (kW):" FontSize="20" FontWeight="Bold" Margin="100,10,0,5"/>
                    <RadioButton x:Name="txtTotalRealTimeUsage" Height="30" Margin="-600,10,0,5" Width="100" Style="{StaticResource SelectionButtonTheme}"/>
                    <!-- Carbon footprint -->
                    <TextBlock Text="Carbon footprint:" FontSize="16"  FontWeight="Bold" Margin="100,10,0,5"/>
                    <RadioButton x:Name="txtCurentCarbonFootprint" Height="30" Margin="-600,10,0,5" Width="100" Style="{StaticResource SelectionButtonTheme}"/>
                    <!-- Energy cost-->
                    <TextBlock Text="Energy cost:" FontSize="16" FontWeight="Bold" Margin="100,10,0,5"/>
                    <RadioButton x:Name="txtCurrentEnergyCost" Height="30" Margin="-600,10,0,5" Width="100" Style="{StaticResource SelectionButtonTheme}"/>
                    <!-- Carbon footprint last hour -->
                    <TextBlock Text="Carbon footprint (last hour):" FontSize="16"  FontWeight="Bold" Margin="100,10,0,5"/>
                    <RadioButton x:Name="txtCarbonFootprintLastHour" Height="30" Margin="-600,10,0,5" Width="100" Style="{StaticResource SelectionButtonTheme}"/>
                    <!-- Carbon footprint last hour -->
                    <TextBlock Text="Energy cost (last hour):" FontSize="16"  FontWeight="Bold" Margin="100,10,0,5"/>
                    <RadioButton x:Name="txtEnergyConsumptionLastHour" Height="30" Margin="-600,10,0,5" Width="100" Style="{StaticResource SelectionButtonTheme}"/>
                </StackPanel>


                <!-- Postojeći sadržaj (slika i dugmad) -->
                <Border Margin="269,0,0,0" CornerRadius="20" Grid.Column="1" Grid.ColumnSpan="2">
                    <Grid Margin="5">
                        <StackPanel x:Name="DetailsPanel" Margin="-200,0,0,5" Width="500" ZIndex="1">
                            <!-- Detalji će biti dinamički dodani ovdje -->
                        </StackPanel>
                    </Grid>
                </Border>
                <WrapPanel x:Name="ApartmentButtonsPanel" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="169,100,0,0" Grid.Column="1">
                    <!-- Apartment buttons go here -->
                </WrapPanel>

                <!-- Frame za prikaz grafikona -->
                <Frame x:Name="GraphFrame" Visibility="Collapsed" Background="#4A4763" Padding="10" Margin="10,10,10,10" NavigationUIVisibility="Hidden" Grid.ColumnSpan="3"/>

                <!-- Desni dio (detalji) -->

                <Border CornerRadius="20" Grid.ColumnSpan="3">
                    <Image Opacity="0.75" HorizontalAlignment="Left" VerticalAlignment="Top" Height="350" Width="350" Margin="800,50,0,0">
                        <Image.Source>
                            <BitmapImage UriSource="pack://application:,,,/Resources/UIsample.png"/>
                        </Image.Source>
                    </Image>
                </Border>

            </Grid>


        </Grid>
    </Border>
</Page>