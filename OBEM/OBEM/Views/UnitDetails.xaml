<Page x:Class="OBEM.Views.UnitDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OBEM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UnitDetails">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>

            
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        
        <Grid Grid.Column="0">
            
            <Image HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image.Source>
                    <!-- Image background -->
                    <BitmapImage UriSource="pack://application:,,,/Resources/sample.png"/>
                </Image.Source>
            </Image>

            
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Vertical" Margin="10">

                
                <Button x:Name="Floor2" Width="150" Height="50" BorderBrush="Red" BorderThickness="2"  Margin="10" Click="FloorButton_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="Red" Offset="0.0"/>
                            <GradientStop Color="LightCoral" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" 
                               Foreground="White" FontWeight="Bold" Text="Floor 2" />
                </Button>

                
                <Button x:Name="Floor1" Width="150" Height="50" BorderBrush="Green" BorderThickness="2" Margin="10" Click="FloorButton_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="Green" Offset="0.0"/>
                            <GradientStop Color="LightGreen" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" 
                               Foreground="White" FontWeight="Bold" Text="Floor 1" />
                </Button>

                
                <Button x:Name="Floor0" Width="150" Height="50" BorderBrush="Blue" BorderThickness="2"  Margin="10" Click="FloorButton_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="Blue" Offset="0.0"/>
                            <GradientStop Color="LightSkyBlue" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" 
                               Foreground="White" FontWeight="Bold" Text="Floor 0" />
                </Button>
            </StackPanel>

            
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="0,0,0,30" >

                
                <Button x:Name="FloorNeg1" Width="150" Height="50" BorderBrush="Purple" BorderThickness="2" Margin="10,0,100,0" Click="FloorButton_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="DarkOrange" Offset="0.0"/>
                            <GradientStop Color="Orange" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" 
                               Foreground="White" FontWeight="Bold" Text="Floor -1" />
                </Button>

                <Button x:Name="Outside" Width="150" Height="50" BorderBrush="Purple" BorderThickness="2" Margin="0,0,0,0" Click="FloorButton_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="Purple" Offset="0.0"/>
                            <GradientStop Color="Violet" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" 
                               Foreground="White" FontWeight="Bold" Text="Outside" />
                </Button>

                
                <Button x:Name="General" Width="150" Height="50" BorderBrush="Yellow" BorderThickness="2" Margin="0,0,0,0" Click="FloorButton_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="Yellow" Offset="0.0"/>
                            <GradientStop Color="LightYellow" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" 
                               Foreground="Black" FontWeight="Bold" Text="General" />
                </Button>
            </StackPanel>
            <StackPanel x:Name="FloorButtonsPanel" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="435,50,0,0">
                <!-- apartment buttons go here-->
            </StackPanel>
        </Grid>

        
        <Grid Grid.Column="1" Background="LightGray">
            
            <!-- Text block placeholder until we make something prettier -->
            <TextBox x:Name="txtFilteredResults" Text="Filtered Results will appear here" Margin="10" />
        </Grid>
    </Grid>
</Page>
