<Page x:Class="OBEM.Views.UnitDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OBEM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UnitDetails">

    <Grid>
        <!-- Image as background -->
        <Image HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image.Source>
                <!-- PNG Image -->
                <BitmapImage UriSource="pack://application:,,,/Resources/sample.png"/>
            </Image.Source>
        </Image>

        <!-- StackPanel aligned to the left for vertical borders -->
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Vertical" Spacing="20">

            <!-- Stylish Border for Floor 1 -->
            <Border Width="150" Height="50" BorderBrush="Red" BorderThickness="2" CornerRadius="15" Margin="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Red" Offset="0.0"/>
                        <GradientStop Color="LightCoral" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" 
                           Foreground="White" FontWeight="Bold" Text="Floor 2" />
            </Border>

            <!-- Stylish Border for Floor 2 -->
            <Border Width="150" Height="50" BorderBrush="Green" BorderThickness="2" CornerRadius="15" Margin="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Green" Offset="0.0"/>
                        <GradientStop Color="LightGreen" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" 
                           Foreground="White" FontWeight="Bold" Text="Floor 1" />
            </Border>

            <!-- Stylish Border for Floor 0 -->
            <Border Width="150" Height="50" BorderBrush="Blue" BorderThickness="2" CornerRadius="15" Margin="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Blue" Offset="0.0"/>
                        <GradientStop Color="LightSkyBlue" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" 
                           Foreground="White" FontWeight="Bold" Text="Floor 0" />
            </Border>
        </StackPanel>

        <!-- StackPanel for horizontal borders under the image -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal" Spacing="20" Margin="0,0,0,30">

            <!-- Stylish Border for Outside -->
            <Border Width="150" Height="50" BorderBrush="Purple" BorderThickness="2" CornerRadius="15" Margin="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Purple" Offset="0.0"/>
                        <GradientStop Color="Violet" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" 
                           Foreground="White" FontWeight="Bold" Text="Outside" />
            </Border>

            <!-- Stylish Border for General -->
            <Border Width="150" Height="50" BorderBrush="Yellow" BorderThickness="2" CornerRadius="15" Margin="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Yellow" Offset="0.0"/>
                        <GradientStop Color="LightYellow" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" 
                           Foreground="Black" FontWeight="Bold" Text="General" />
            </Border>
        </StackPanel>
    </Grid>
</Page>
