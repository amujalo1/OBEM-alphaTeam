<Page x:Class="OBEM.Views.UnitDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OBEM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UnitDetails">
    <Border Background="#272537" CornerRadius="20" Padding="5" BorderBrush="Gray" BorderThickness="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Logo" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="22"/>

            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                <RadioButton x:Name="Floor2" Click="FloorButton_Click" Content="Floor 2" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="Floor1" Click="FloorButton_Click" Content="Floor 1" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="Floor0" Click="FloorButton_Click" Content="Floor 0" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="FloorNeg1" Click="FloorButton_Click" Content="Floor -1" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="Outside" Click="FloorButton_Click" Content="Outside" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="General" Click="FloorButton_Click" Content="General" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="200" MinWidth="100"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" CornerRadius="20" Background="Transparent" Padding="5" BorderBrush="Gray" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <Grid>
                            <!-- Podignuta slika kuće -->
                            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="350" Width="350" Margin="0,50,0,0" Panel.ZIndex="1">
                                <Image.Source>
                                    <BitmapImage UriSource="pack://application:,,,/Resources/UIsample.png"/>
                                </Image.Source>
                            </Image>

                            <!-- Pomaknuti dugmadi za apartmane malo gore -->
                            <StackPanel x:Name="ApartmentButtonsPanel" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,100,0,0">
                                <!-- Apartment buttons go here -->
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Gray" ShowsPreview="True"/>

                <Border Grid.Column="2" CornerRadius="20" Background="#4A4763" Padding="5" BorderBrush="Gray" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <TextBlock Text="Group2 List:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ListBox x:Name="lstGroup2" Height="150" SelectionChanged="Group2_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" />
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <TextBlock Text="Details:" FontWeight="Bold" Margin="0,10,0,5"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
                                <TextBlock x:Name="txtDetails" TextWrapping="Wrap" />
                            </ScrollViewer>

                            <TextBlock Text="Additional Information:" FontWeight="Bold" Margin="0,10,0,5"/>
                            <TextBox x:Name="txtAdditionalInfo" Height="100" TextWrapping="Wrap" AcceptsReturn="True" />
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Page>