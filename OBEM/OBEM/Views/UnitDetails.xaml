<Page x:Class="OBEM.Views.UnitDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OBEM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UnitDetails"
      Loaded="PageLoaded">
    <Border CornerRadius="5" Padding="5" BorderBrush="Gray" BorderThickness="2">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                <GradientStop Color="#272537" Offset="0" />
                <GradientStop Color="#1d4fba" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Logo" FontFamily="Verdana" Margin="-15,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="22" MouseLeftButtonDown="PageLoaded"/>

            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                <RadioButton x:Name="Floor2" FontFamily="Verdana" Click="FloorButton_Click" Content="Floor 2" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="Floor1" FontFamily="Verdana" Click="FloorButton_Click" Content="Floor 1" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="Floor0" FontFamily="Verdana" Click="FloorButton_Click" Content="Floor 0" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="FloorNeg1" FontFamily="Verdana" Click="FloorButton_Click" Content="Floor -1" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="Outside" FontFamily="Verdana" Click="FloorButton_Click" Content="Outside" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="General" FontFamily="Verdana" Click="FloorButton_Click" Content="General" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>
            <Grid Grid.Row="0" Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <!--Real Time usage-->
                    <TextBlock Text="Total Real-Time Usage (kW):" FontSize="18" FontWeight="Bold" Margin="0,0,0,0"/>
                    <RadioButton x:Name="txtTotalRealTimeUsage" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Height="30" Margin="0,0,0,0" Width="40" Style="{StaticResource SelectionButtonTheme}"/>
                    <!-- Carbon footprint -->
                    <TextBlock Text="Carbon footprint:" FontSize="14" FontWeight="Bold" Margin="5,0,0,0"/>
                    <RadioButton x:Name="txtCurentCarbonFootprint" FontWeight="Bold" Height="30" Margin="0,0,0,0" Width="80" Style="{StaticResource SelectionButtonTheme}"/>
                    <!-- Energy cost-->
                    <TextBlock Text="Energy cost:" FontSize="14" FontWeight="Bold" Margin="0,0,0,0"/>
                    <RadioButton x:Name="txtCurrentEnergyCost" Height="30" FontWeight="Bold" Margin="0,0,0,0" Width="50" Style="{StaticResource SelectionButtonTheme}"/>
                    <!-- Carbon footprint last hour -->
                    <TextBlock Text="Carbon footprint (last hour):" FontSize="14"  FontWeight="Bold" Margin="0,0,0,0"/>
                    <RadioButton x:Name="txtCarbonFootprintLastHour" Height="30" FontWeight="Bold" Margin="0,0,0,0" Width="80" Style="{StaticResource SelectionButtonTheme}"/>
                    
                    <TextBlock Text="Energy cost (last hour):" FontSize="14"  FontWeight="Bold" Margin="0,0,0,0"></TextBlock>
                    <RadioButton x:Name="txtEnergyConsumptionLastHour" Height="30" FontWeight="Bold" Margin="0,0,0,0" Width="50" Style="{StaticResource SelectionButtonTheme}"/>
                </StackPanel>
                
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            
                <!-- Postojeći sadržaj (slika i dugmad) -->
                    <Border Margin="400,0,0,0" CornerRadius="20">
                        <Grid Margin="5">
                            <StackPanel x:Name="DetailsPanel" Margin="-800,12,0,0" Width="500" ZIndex="1">
                                <!-- Detalji će biti dinamički dodani ovdje -->
                            </StackPanel>
                        </Grid>
                    </Border>
                    <WrapPanel x:Name="ApartmentButtonsPanel" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,100,0,0">
                        <!-- Apartment buttons go here -->
                    </WrapPanel>

                    <!-- Frame za prikaz grafikona -->
                    <Frame x:Name="GraphFrame" Visibility="Collapsed" Background="#4A4763" Padding="10" Margin="10" NavigationUIVisibility="Hidden"/>
                <RadioButton x:Name="txtCurrentOption" Height="30" FontWeight="Bold" Margin="600,0,0,300" Width="100" Style="{StaticResource SelectionButtonTheme}"/>
                <!-- Desni dio (detalji) -->
                
                    <Border CornerRadius="20">
                        <Image Opacity="0.75" HorizontalAlignment="Left" VerticalAlignment="Top" Height="350" Width="350" Margin="700,50,0,0">
                            <Image.Source>
                                <BitmapImage UriSource="pack://application:,,,/Resources/UIsample.png"/>
                            </Image.Source>
                        </Image>
                    </Border>
                
            </Grid>


        </Grid>
    </Border>
</Page>