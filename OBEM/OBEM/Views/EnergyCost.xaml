<Page x:Class="OBEM.Views.EnergyCost"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:OBEM.Views"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EnergyCost">

	<Grid>
		<Button Name="BtnEnergyCost" Content="Energy Cost"
                HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Grid.Row="0" Grid.ColumnSpan="2" Margin="0,10,0,0"
                Click="BtnEnergyCost_Click"/>
		<Button Name="BtnEnergyCostPerFloor" Content="Energy Cost Per Floor"
                HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Grid.Row="1" Grid.ColumnSpan="2" Margin="0,50,0,0"
                Click="BtnEnergyCostPerFloor_Click"/>
		<TextBox Name="txtResult" HorizontalAlignment="Stretch"
                 VerticalAlignment="Top" Grid.Row="2" Grid.ColumnSpan="2"
                 Margin="0,20,0,0" TextWrapping="Wrap" IsReadOnly="True" Height="200"/>
		<Button Name="BtnEnergyCostBuilding" Content="Energy Cost For Entire Building"
                HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Grid.Row="2" Grid.ColumnSpan="2" Margin="0,90,0,0"
                Click="BtnEnergyCostBuilding_Click"/>
		<Button Name="Floor0" Content="Floor 0"
                HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Grid.Row="2" Grid.ColumnSpan="2" Margin="0,130,0,0"
                Click="BtnUnitEnergyCostPerFloor_Click"/>
		<Button Name="Floor1" Content="Floor 1"
                HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Grid.Row="2" Grid.ColumnSpan="2" Margin="0,170,0,0"
                Click="BtnUnitEnergyCostPerFloor_Click"/>
		<Button Name="Floor2" Content="Floor 2"
                HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Grid.Row="2" Grid.ColumnSpan="2" Margin="0,210,0,0"
                Click="BtnUnitEnergyCostPerFloor_Click"/>
		<Button Name="Outside" Content="Outside"
                HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Grid.Row="2" Grid.ColumnSpan="2" Margin="0,250,0,0"
                Click="BtnUnitEnergyCostPerFloor_Click"/>
		<Button Name="Monitoring" Content="Monitoring"
                HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Grid.Row="2" Grid.ColumnSpan="2" Margin="0,290,0,0"
                Click="BtnUnitEnergyCostPerFloor_Click"/>
		<Button Name="Floor_1" Content="Floor -1"
                HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Grid.Row="2" Grid.ColumnSpan="2" Margin="0,330,0,0"
                Click="BtnUnitEnergyCostPerFloor_Click"/>
		<Button Name="Apartment_1" Content="Apartment 1"
                HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Grid.Row="2" Grid.ColumnSpan="2" Margin="0,370,0,0"
                Click="BtnUnitEnergyCost_Click"/>
		<Button Name="Apartment_2" Content="Apartment 2"
                HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Grid.Row="2" Grid.ColumnSpan="2" Margin="0,410,0,0"
                Click="BtnUnitEnergyCost_Click"/>
	</Grid>
</Page>