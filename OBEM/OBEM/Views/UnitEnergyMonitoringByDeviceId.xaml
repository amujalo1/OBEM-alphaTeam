<Window x:Class="OBEM.UnitEnergyMonitoringByDeviceId"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Unit Energy Monitoring By Device Id" Height="450" Width="800">

    <Grid>
        <TextBlock Text="Energy Monitoring" FontSize="16" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" 
                   Margin="0,10,0,0"/>

        <TextBox x:Name="DeviceIdTextBox" Width="200" Height="30"
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Margin="10,50,0,0" />

        <Button Content="Load Data" Width="100" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="220,50,0,0" Click="LoadDataButton_Click"/>

        <oxy:PlotView x:Name="EnergyPlot" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      Margin="10,100,10,10"/>

        <TextBlock x:Name="MinMaxAvgTextBlock" FontSize="14"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="10,80,0,0"
                   Text="Min: -, Max: -, Average: -" />
    </Grid>
</Window>